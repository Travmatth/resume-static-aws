								div.tile

					div.column.is-4.game-tile
						div.level.no-pointer-events
							div.level-item.no-pointer-events
								div.tile

					div.column.is-4.game-tile
						div.level.no-pointer-events
							div.level-item.no-pointer-events
								div.tile

				div
					div.level
						div.level-item
							button#undo.button.is-outlined.is-danger Undo Move

			div#score.scene.card.is-fullwidth.menu.hidden
				div.columns.is-mobile.is-multiline.expands

					div.column.is-6.is-12-mobile
						div.level
							div.level-item
								div.box.fit X
								div Score:
								div#X-score.score 0

					div.column.is-6.is-12-mobile
						div.level
							div.level-item
								div.box.fit O
								div Score:
								div#O-score.score 0

					div.column.is-6
						div.level
							div.level-item
								button#restart.button.is-primary.is-outlined  Restart

					div.column.is-6
						div.level
							div.level-item
