extends ../common/pug/layout

block heading
	if (htmlWebpackPlugin)
		link(href=`${htmlWebpackPlugin.files.css}` rel="stylesheet" type="text/css")

block content
	section.section.hero
		include ../common/pug/nav.pug

		div.hero-body.is-fullwidth
			div.container.shift-down
				div.columns
					div.column
						div.level
							div.level-item
								span: h1#fetch-btn.button.heading.has-text-centered.is-4 Get Weather
					div.column
						div.tabs.is-centered
							ul
								li.celsius
									input(name="temp", type="radio", data-type="celsius")
									|celsius
								li.fahrenheit
									input(name="temp", type="radio", checked="true", data-type="fahrenheit")
									|fahrenheit

		div.container
			div.error.hidden
				div.level
					div.level-item.has-text-centered An error has occurred. Please check your internet connection and try again
			div.columns.spinner.hidden
				img.column.is-6.is-offset-3(src=require('assets/icons/spinner.svg'), style="margin: 10vh auto 0 auto;")
			table.table.table-color-override.hidden
				thead
					tr
						td Day
						td Time
						td Temp
						td
						td Forecast
				tbody
