{
  "rootDir": "../../",
  "timers": "fake",
  "testRegex": "[A-Za-z]+\\.spec\\.js$",
  "setupFiles": [
    "<rootDir>/tests/setup/setup.js"
  ],
  "moduleNameMapper": {
    "\\.(key|wav|mp3|png)$": "<rootDir>/tests/mocks/fileMock.js",
    "^protected(.*)$": "<rootDir>/tests/mocks/fileMock.js",
    "^common(.*)$": "<rootDir>/src/common$1.js",
    "^assets(.*)$": "<rootDir>/assets$1",
    "^tests(.*)$": "<rootDir>/tests$1"
  },
  "transform": {
    "^.+\\.js?$": "babel-jest",
    ".*\\.pug$": "<rootDir>/tests/preprocessors/pug-transform.js",
    ".*\\.html$": "<rootDir>/tests/preprocessors/html-transform.js"
  },
  "moduleFileExtensions": ["js"],
  "moduleDirectories": [
		"<rootDir>/node_modules",
		"<rootDir>/src"
	],
  "coverageDirectory": "<rootDir>/tests/coverage",
  "coveragePathIgnorePatterns": [
    "calculator/Parser",
    "tests"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 95
    }
  }
}
